{
  "name": "k3t-nextjs-boilerplate",
  "version": "1.0.0",
  "description": "A modern Next.js boilerplate with TypeScript, Tailwind CSS, Jest, Storybook, and more",
  "author": "Kode3 Tech",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kode3tech/k3t-nextjs-boilerplate.git"
  },
  "keywords": [
    "nextjs",
    "react",
    "typescript",
    "tailwindcss",
    "boilerplate",
    "jest",
    "storybook",
    "eslint",
    "prettier"
  ],
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "test": "jest --coverage --passWithNoTests --maxWorkers=50%",
    "test:watch": "jest --watch --maxWorkers=25%",
    "test:ci": "jest --runInBand",
    "gen:component": "npx plop --plopfile generators/plopfile.js",
    "start": "next start",
    "lint": "next lint",
    "prepare": "husky",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.1.1",
    "@eslint/js": "^9.33.0",
    "@storybook/addon-a11y": "^9.1.3",
    "@storybook/addon-docs": "^9.1.3",
    "@storybook/addon-onboarding": "^9.1.3",
    "@storybook/addon-vitest": "^9.1.3",
    "@storybook/nextjs-vite": "^9.1.3",
    "@tailwindcss/postcss": "^4",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^20",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@vitest/browser": "^3.2.4",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.33.0",
    "eslint-config-next": "^15.4.6",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-storybook": "^9.1.3",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "jest": "^30.0.5",
    "jest-environment-jsdom": "^30.0.5",
    "lint-staged": "^16.1.5",
    "next": "^15.4.6",
    "playwright": "^1.55.0",
    "plop": "^4.0.1",
    "prettier": "3.6.2",
    "storybook": "^9.1.3",
    "tailwindcss": "^4",
    "typescript": "^5",
    "typescript-eslint": "^8.39.1",
    "vitest": "^3.2.4"
  }
}
